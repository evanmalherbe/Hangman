@*Hangman home page*@
@model Hangman.ViewModel.HomeViewModel

@{
  string secretWord = Model?.SecretWord ?? "";
  int wordLength = secretWord.Length;
}

<div class="container">
  <header>
    <div class="logo-title">
      <div id="logo-placeholder" class="logo-placeholder"></div>
      <h1 id="game-heading">Hangman</h1>
    </div>
  </header>

  <main class="game-area">
    <section id="hangman-visual" class="visual-area">
      <img id="hangman-image" src="/images/hangman_0.png" alt="Hangman Character" />
    </section>

    <section class="game-info">

      <div id="message-box" class="info-box message-box hidden">
        <p id="user-message"></p>
      </div>

      <div class="info-box secret-word-box">
        <h2>Secret Word</h2>
        <p id="secret-word-display">_ _ _ _ _ _ _</p>
      </div>

      <div class="info-box tries-box">
        <h2>Remaining Tries</h2>
        <p id="remaining-tries">11</p>
      </div>

      <div class="info-box used-letters-box">
        <h2>Used Letters</h2>
        <p id="used-letters-display">A, E, I, O</p>
      </div>

      <hr>

      <div class="guess-form">
        <label for="guess-input">Guess a Letter:</label>
        <input type="text" id="guess-input" maxlength="1" pattern="[a-zA-Z]" placeholder="Enter a letter" />
        <button id="submit-guess-button" class="btn">Guess</button>
      </div>

    </section>
  </main>
</div>
@section scripts {

	<script type="text/javascript">
		$(document).ready(async function ()
		{
			$(document).attr("title", "Hangman Game");
			secretWord = '@secretWord';
			saveWord();
		});
	</script>
}

